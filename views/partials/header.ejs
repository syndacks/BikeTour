<!-- 		need to make sure that there is an error greater than zero, because an empty array is still truthy...so we need to ensure that there is something in the error array -->
		<% if (error && error.length > 0){ %>
			<div class="alert alert-danger" role="alert">
				<%= error %>
			</div>
		<% } %>
		<% if (success && success.length > 0){ %>
			<div class="alert alert-success" role="alert">
				<%= success %>
			</div>
		<% } %>
