<% include //partials/header.ejs %>

<div class="container">
	<div class = "row">
		<h1 style="text-align: center">Edit <%=hostground.name%> </h1>
		<div style="width: 50%; margin: 25px auto;">
			<form action="/hostgrounds/<%= hostground._id %>?_method=PUT" method="POST">
				<div class="form-group">
					Name<input class="form-control" input type = "text" name = "hostground[name]" value = "<%= hostground.name %>">
				</div>		

				<div class="form-group">
					Image<input class="form-control" input type="text" name = "hostground[image]" value="<%= hostground.image %>">
				</div>		

				<div class="form-group">
					Description<input class="form-control" input type="text" name = "hostground[description]" value="<%= hostground.description %>">
				</div>		

				<div class="form-group">
					Latitude<input class="form-control" input type="text" name = "hostground[latitude]" value="<%= hostground.latitude %>">
				</div>	


				<div class="form-group">
					Longitude<input class="form-control" input type="text" name = "hostground[longitude]" value="<%= hostground.longitude %>">
				</div>	

				<div class="form-group">
					Journal
					<textarea class="form-control" name = "hostground[journal]">
						<%- hostground.journal %>
					</textarea>
				</div>

				<button class="btn btn-lg btn-primary btn-block">Submit!</button>
			</form>
				<a href="/hostgrounds">Go Back</a>
		</div>
	</div>
</div>

<% include //partials/footer.ejs %>

