<% include ./partials/header.ejs %>

<div class="container">

<h4>Edit <%=hostground.name%> </h4>
	<form class="form-horizontal" action="/hostgrounds/<%= hostground._id %>?_method=PUT" method="POST">
		<div class="form group">
			Name<input type = "text" name = "hostground[name]" value = "<%= hostground.name %>">
		</div>		

		<div class="form group">
			Image<input type="text" name = "hostground[image]" value="<%= hostground.image %>">
		</div>		

		<div class="form group">
			Comment<input type="text" name = "hostground[comment]" value="<%= hostground.comment %>">
		</div>


		<button>Submit!</button>
	</form>

</div>

