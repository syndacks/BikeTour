<% include ./partials/header.ejs %>


<div class="container">
	<header class="jumbotron">
		<div class = "container">
			<h1>Welcome to BikeTour!</h1>
			<p>Take a look at some of the best hostgrounds along the Southern Tier!"</p>
			<p>
				<a class="btn btn-primary btn-large" href="/hostgrounds/new">Create new hostground</a>
			</p>
		</div>
	</header>

	<div class="row text-center" style="display:flex; flex-wrap:wrap">
		<% hostgrounds.forEach(function(hostground){ %>
			<div class = "col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src="<%= hostground.image %>">
						<div class="caption">
							<%= hostground.name %>
						</div>
					<p>
						<a href="/hostgrounds/<%=hostground._id%>" class = "btn btn-primary">Show more</a>
					</p>
					</div>
				</div>
			<% }); %>
		</div>
</div>



<% include ./partials/footer.ejs %>